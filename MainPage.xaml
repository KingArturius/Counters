<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Counter.MainPage"
             Shell.BackgroundColor="DimGray">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10" BackgroundColor="Black">
            <Button Text="Add counter"
                    TextColor="Black"
                    FontSize="20"
                    Clicked="OnAddCounterClicked"
                    BackgroundColor="White" />
            <ScrollView>
                <StackLayout x:Name="CountersLayout" Spacing="15"/>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
